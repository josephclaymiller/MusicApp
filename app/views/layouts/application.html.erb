<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:message]%>
	<p class="message">
		<%= flash[:message]%>
	</p>
	<% end %>
	
	<% if flash[:errors]%>
	<p class="errors"> 
		<h2>Errors:</h2>
		<ul>
		<% flash[:errors].each do |error|%>
		<li>
			<%= error %>
		</li>
		<% end %>
		</ul>
	</p>
	<% end %>
	
	<% if logged_in? %>
		<%= button_to("Log out", session_url, :method => :delete) %>
	<% else %>
		<%= link_to("Log In", new_session_url) %>
		<%= link_to("Sign Up", new_user_url) %>
	<% end %>
	

<%= yield %>

</body>
</html>
